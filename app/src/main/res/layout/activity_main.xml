<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <RelativeLayout
        android:id="@+id/relative1"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@color/white"

        >


    </RelativeLayout>

<!--    <RelativeLayout-->
<!--        android:id="@+id/relative2"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="16dp"-->
<!--        android:layout_below="@id/relative1"-->
<!--        android:paddingHorizontal="30dp"-->
<!--        android:background="@color/black">-->

<!--    </RelativeLayout>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:id="@+id/relative3"
        android:layout_below="@id/relative1"
        android:layout_centerHorizontal="true"

        >
        <View
            android:layout_width="175dp"
            android:layout_height="12dp"
             android:layout_marginTop="2dp"
               android:background="@color/black"
            ></View>
        <View
            android:layout_width="122dp"
            android:layout_height="12dp"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:background="@color/black"
            ></View>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/relative4"
        android:layout_below="@+id/relative3"
        android:background="#D22129"
        android:layout_centerHorizontal="true"
        >
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:id="@+id/button1"
            android:layout_marginTop="40dp"
            android:paddingVertical="16dp"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:text="Orrin Woodward"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:paddingHorizontal="55sp"
            android:textStyle="italic"
            android:fontFamily="serif"
            />
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button2"
            android:layout_below="@+id/button1"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="10dp"
            android:paddingVertical="16dp"
            android:textAllCaps="true"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:text="Subject Search"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:paddingHorizontal="65sp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-black"
            />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/relative5"
        android:layout_below="@id/relative4"
        android:background="#C3C9D5"
        android:layout_centerHorizontal="true"
        >
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/button3"
            android:layout_marginTop="25dp"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bb1"
            android:text="Orrin Woodward"
            android:textColor="#B7ED4A4A"
            android:textSize="26sp"
            android:paddingHorizontal="40dp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-condensed-medium"
            />
        <android.widget.Button
            android:layout_width="250dp"
            android:layout_height="90dp"
            android:layout_marginHorizontal="40dp"
            android:id="@+id/button4"
            android:layout_marginTop="100dp"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bb2"
            android:textColor="#B7ED4A4A"
            android:textSize="26sp"
            android:paddingHorizontal="40dp"
            android:textStyle="italic"
            android:drawableTop="@drawable/play2"
            android:fontFamily="sans-serif-condensed-medium"
            />

        <ImageView
            android:id="@+id/img_play"
            android:layout_width="120dp"
            android:layout_height="168dp"
            android:layout_marginTop="63dp"
            android:layout_marginLeft="320dp"
            android:src="@drawable/play3" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_below="@id/relative5"
        android:id="@+id/relative6"
           android:background="#3F4140"
        android:layout_centerHorizontal="true"
        >
        <ImageView
            android:id="@+id/img_Leader"
            android:layout_width="500dp"
            android:layout_height="120dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/Leader" />



    </RelativeLayout>
    <ImageView
        android:id="@+id/img_RR"
        android:layout_width="346dp"
        android:layout_height="98dp"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_marginVertical="46dp"
        android:src="@drawable/rr_logo" />

</RelativeLayout>